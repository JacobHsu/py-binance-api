# Telegram Bot 配置範例
# 複製此文件為 .env 並填入您的實際值

# ===== 必需配置 =====
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=123456789

# ===== 訊號發送設定 =====
SEND_BUY_SIGNALS=true
SEND_SELL_SIGNALS=true
SEND_MARKET_SUMMARY=true

# ===== 訊號觸發條件 =====
BUY_SIGNAL_THRESHOLD=1.0
SELL_SIGNAL_THRESHOLD=-1.0

# ===== 監控幣種設定 =====
SUPPORTED_SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT,DOGEUSDT,XRPUSDT

# ===== 訊息格式設定 =====
MESSAGE_LANGUAGE=zh-TW
INCLUDE_TECHNICAL_ANALYSIS=true

# ===== 進階設定 =====
# 發送頻率限制 (秒)
MESSAGE_INTERVAL=1

# 是否在測試模式
TEST_MODE=false

# 日誌級別 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO